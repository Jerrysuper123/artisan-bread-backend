{{#extends "base"}}
{{#block "content"}}
<h1>Manage products</h1>
<table class="table">
    
    <a href="/products/create">Add a product</a>
    <a class="ms-5" href="/users/logout">log out</a>
    <a class="ms-5" href="/cart">Cart</a>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Flavour</th>
            <th>Type</th>
            <th>Ingredient</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>${{this.price}}</td>
            <td>{{this.description}}</td>
            <td>{{this.flavour.flavour}}</td>
            <td>{{this.type.type}}</td>
            <td>{{#each this.ingredients}}
                <span class="badge bg-primary">{{this.ingredient}}</span>
                {{/each}}
            </td>
            <td>
                {{#if this.image_url }}
                    <img src="{{this.image_url}}" style="width: 3rem"/>
                    {{else}}
                    <img src="" style="display:none"/>
                {{/if}}
            </td>
            <td>
                {{!--add to cart btn  --}}
                <a href="/cart/{{this.id}}/add" class="btn btn-success btn-sm">Add to cart</a>
                <a href="/products/{{this.id}}/update">update</a>
                <a href="/products/{{this.id}}/delete">delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}
{{/extends}}