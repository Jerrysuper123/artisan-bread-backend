{{#extends 'base'}}

{{#block 'content'}}
<main class="secondaryBgColor d-flex shadow justify-content-center adminFormContainer align-items-center">
  
       <img class="formImage d-none d-md-block" src="https://raw.githubusercontent.com/Jerrysuper123/artisanbreadsources/main/kneadingBG.avif"/>

<div class="d-flex flex-column justify-content-center align-items-center adminForm px-3">
        <img
            class="loginIcon"
            src="https://raw.githubusercontent.com/Jerrysuper123/artisanbreadsources/main/brandLogo.jpg"
            alt="icon"
          />
              <h3 class="text-center mb-3 mt-3">Welcome Back!</h3>
